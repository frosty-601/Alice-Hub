local Players = game:GetService("Players")

local player = Players.LocalPlayer

-- Replace with the Asset IDs of the hay shirt, pants, and accessories from the marketplace
local hayShirtAssetId = 9994284902 -- Example Hay Shirt Asset ID
local hayPantsAssetId = 9994290320 -- Example Hay Pants Asset ID
local hayAccessoryAssetIds = {987654321, 17345169629, 12482375447, 12482379270}

-- Function to remove current clothing and accessories and add new ones
local function updateAppearance(character)
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        local description = humanoid:GetAppliedDescription()
        
        -- Set new shirt and pants
        description.Shirt = "rbxassetid://" .. hayShirtAssetId
        description.Pants = "rbxassetid://" .. hayPantsAssetId

        -- Clear existing accessories
        description.HatAccessory = ""
        description.FaceAccessory = ""
        description.NeckAccessory = ""
        description.ShoulderAccessory = ""
        description.FrontAccessory = ""
        description.BackAccessory = ""
        description.WaistAccessory = ""

        -- Add new accessories
        local accessories = {}
        for _, assetId in ipairs(hayAccessoryAssetIds) do
            table.insert(accessories, "rbxassetid://" .. assetId)
        end
        description.HatAccessory = table.concat(accessories, ",")

        -- Apply the updated description to the character
        humanoid:ApplyDescription(description)
    else
        warn("Humanoid not found in character")
    end
end

-- Connect to character appearance loaded event
player.CharacterAppearanceLoaded:Connect(updateAppearance)

-- Apply clothing and accessories if the character is already loaded
if player.Character then
    updateAppearance(player.Character)
end
